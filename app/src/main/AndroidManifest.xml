<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samuel.tfgapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".LogInActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.samuel.tfgapp.LogInActivity" />
        </activity>
        <activity
            android:name=".secondActivity"
            android:label="@string/activity_second"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.samuel.tfgapp.MainActivity" />
        </activity>
        <activity android:name=".SignUp" />
        <activity android:name=".usrOptionsActivity"></activity>
    </application>

</manifest>